<% layout('/layouts/boilerplate') %>

<body>
<!-- <form action="/listings/new" method="GET">
    <button >Create new listing</button>
</form> -->
    <div class="row mt-3 row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
         
        <% for(let listing of allListings) {%>
            <div class="col">     
                <a href="/listings/<%= listing._id %>" class="listing_link">
                    <div class="card listing-card col " style="width: 20rem;">
                        <img src="<%= listing.image.url %>" 
                            class="card-img-top" 
                            alt="<%= listing.image.filename %>" 
                            style="height: 20rem;">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                                <b><%= listing.title %></b>  <br>    
                                &#2547;<%= listing.price.toLocaleString('bn-BD') %> /night    
                                <i class="tax-info">&nbsp; &nbsp; +18% GST</i>          
                            </p>
                        </div>
                    </div>
                </a>

            </div>
        
        <% } %>
    </div>


    <% if(allListings.length==0 && category) {%>  
        <div class="row mt-5 ms-5">
    
            <div class="col-md-8 offset-4 mt-5">
                <h4>No Listing in  "<%= category %>" category</h4>
            </div>
        </div>
    <%} else if(allListings.length==0) {%>
        <div class="row mt-5 ms-5">
            <div class="col-md-8 offset-4 mt-5">
                <h4>No Listing Exist. <br>
                     Please create a listing</h4>
            </div>
        </div>
    <% } %>

    <script src="/js/taxToggle.js"></script>
</body>
